{
	"name": "stonky",
	"version": "1.0.1",
	"license": "MIT",
	"author": {
		"name": "Tom Liang",
		"url": "https://github.com/tomliangg"
	},
	"description": "Stock Watcher CLI",
	"keywords": [
		"stocks",
		"stock watcher CLI",
		"CLI"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tomliangg/stonky.git"
	},
	"bugs": {
		"url": "https://github.com/tomliangg/stonky/issues"
	},
	"bin": "dist/cli.js",
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"build": "tsc",
		"start": "npm run build && dist/cli.js",
		"postinstall": "node init.js",
		"pretest": "npm run build",
		"test": "xo && ava"
	},
	"files": [
		"dist/*",
		"init.js"
	],
	"dependencies": {
		"axios": "^0.25.0",
		"ink": "^3.2.0",
		"ink-table": "^3.0.0",
		"meow": "^9.0.0",
		"react": "^17.0.2"
	},
	"ava": {
		"typescript": {
			"extensions": [
				"tsx"
			],
			"rewritePaths": {
				"source/": "dist/"
			},
			"compile": false
		}
	},
	"xo": {
		"extends": "xo-react",
		"rules": {
			"react/prop-types": "off",
			"@typescript-eslint/naming-convention": "off",
			"import/extensions": [
				"error",
				"ignorePackages",
				{
					"js": "never",
					"jsx": "never",
					"ts": "never",
					"tsx": "never"
				}
			]
		}
	},
	"devDependencies": {
		"@ava/typescript": "^3.0.1",
		"@sindresorhus/tsconfig": "^2.0.0",
		"@types/node": "^17.0.14",
		"@types/react": "^17.0.38",
		"ava": "^4.0.1",
		"chalk": "^4.1.2",
		"eslint-config-xo-react": "^0.26.0",
		"eslint-plugin-react": "^7.28.0",
		"eslint-plugin-react-hooks": "^4.3.0",
		"ink-testing-library": "^2.1.0",
		"typescript": "^4.5.5",
		"xo": "^0.47.0"
	}
}
